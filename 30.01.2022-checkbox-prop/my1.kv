# File name: widgets.kv
<DbGenWidget>:
    option1:option1
    option2:option2
    option3:option3
    GridLayout:
        cols:1
        size: root.width - 200, root.height - 200
        pos: 100, 100
        GridLayout:
            cols:2
            Label:
                text: "Option 1"
                size_hint_x: .80
                font_size:30
                color: 1,1,0,6
            CheckBox:
                id: option1
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20
            Label:
                text: "Option 2"
                size_hint_x: .80
                font_size:20
                color: 1,1,0,6
            CheckBox:
                id: option2
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20
            Label:
                text: "Option 3"
                size_hint_x: .80
                font_size:10
                color: 1,1,0,6
            CheckBox:
                id: option3
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20
        GridLayout:
            cols:2